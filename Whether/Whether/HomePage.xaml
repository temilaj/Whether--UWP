<Page
    x:Class="Whether.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Whether"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <StackPanel >
        <StackPanel VerticalAlignment="Center" >

            <Button Name="refreshButton" Content="Get Weather" Click="refreshButton_Click"/>

            <Image Name="resultImage" Width="200" Height="200" HorizontalAlignment="Center"/>
            <TextBlock Name="TemperatureTB" FontSize="52" Foreground="Black" HorizontalAlignment="Center" FontWeight="Light"/>
            <TextBlock Name="DescriptionTB" FontSize="36" Foreground="Black" HorizontalAlignment="Center"/>
            <TextBlock Name="LocationTB" FontSize="24" Foreground="Black" HorizontalAlignment="Center" TextWrapping="Wrap"/>

            <ProgressRing Name="GetDataProgressRing" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Width="100" 
                          Height="100"
                          Foreground="Gray" />
        </StackPanel>
    </StackPanel>
</Page>
